<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/setsumei" android:keepScreenOn="false"
>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView2" android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"
            android:text="@string/game_about" android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:gravity="center|center_vertical" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <TextView
            android:text="このゲームは、敵とジャンケンをして戦うゲームです。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:id="@+id/textView3" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="230dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/textView4"/>
    <TextView
            android:text="弱い敵や強い敵がいます。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textView5" app:layout_constraintEnd_toEndOf="@+id/textView5"
            android:id="@+id/textView4" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginBottom="33dp" app:layout_constraintBottom_toTopOf="@+id/textView5"/>
    <TextView
            android:text="強い敵ほど勝利した時の得点が大きいです。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textView8" app:layout_constraintEnd_toEndOf="@+id/textView8"
            android:id="@+id/textView5" app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="43dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginBottom="33dp" app:layout_constraintBottom_toTopOf="@+id/textView8"/>
    <TextView
            android:text="また一度でも負けたらゲーム終了です。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textView7" app:layout_constraintEnd_toEndOf="@+id/textView7"
            android:id="@+id/textView6" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginBottom="33dp" app:layout_constraintBottom_toTopOf="@+id/textView7"/>
    <TextView
            android:text="それと何回か敵から逃げることができます。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textView9" app:layout_constraintEnd_toEndOf="@+id/textView9"
            android:id="@+id/textView7" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginBottom="33dp" app:layout_constraintBottom_toTopOf="@+id/textView9"/>
    <TextView
            android:text="でも強い相手ほどジャンケンが強いです。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textView6" app:layout_constraintEnd_toEndOf="@+id/textView6"
            android:id="@+id/textView8" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/textView6"/>
    <TextView
            android:text="あなたは戦う相手を変えることができます。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textView10" app:layout_constraintEnd_toEndOf="@+id/textView10"
            android:id="@+id/textView9" android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginBottom="33dp" app:layout_constraintBottom_toTopOf="@+id/textView10"/>
    <TextView
            android:text="勝ってください。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="34dp" app:layout_constraintBottom_toTopOf="@+id/startButton"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView9"
    />
    <Button
            android:text="@string/aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:id="@+id/startButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
</androidx.constraintlayout.widget.ConstraintLayout>