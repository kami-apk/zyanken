<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".lose" android:background="@android:color/background_dark">

    <TextView
            android:text="でも負けてしまった。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView20" app:layout_constraintTop_toBottomOf="@+id/coo"
            android:layout_marginTop="32dp" android:textColor="@android:color/background_light"/>
    <TextView
            android:text="You Lose!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView16" android:textColor="@android:color/background_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="あなたは"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/coo" android:textColor="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/textView16" android:layout_marginTop="150dp"/>
    <TextView
            android:text="またね。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView18" app:layout_constraintTop_toBottomOf="@+id/coo"
            android:layout_marginTop="96dp" android:textColor="@android:color/background_light"/>
    <TextView
            android:text="やりなおす"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ak" android:textColor="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/textView18" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.63"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:background="@drawable/frame_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>