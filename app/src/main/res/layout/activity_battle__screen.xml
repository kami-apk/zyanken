<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Battle_Screen" android:background="#000000">
    <TextView
            android:text="逃げる"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/background_light" android:background="@drawable/frame_layout"/>
    <TextView
            android:text="戦う"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            android:id="@+id/battle" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/background_light" android:background="@drawable/frame_layout"/>
    <TextView
            android:text="敵の名前"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/names" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/change" android:textColor="@android:color/background_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintVertical_bias="0.17000002" android:gravity="center"/>
    <TextView
            android:text="強さ："
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/point"
            app:layout_constraintTop_toBottomOf="@+id/names" android:textColor="@android:color/background_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="right"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp" app:srcCompat="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/point" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/change" android:scaleType="centerCrop"
            android:background="#FFFFFF" app:layout_constraintVertical_bias="0.13"/>
    <TextView
            android:text="STAGE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" android:id="@+id/stage_number" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:textColor="@android:color/background_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="SCORE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score_now" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/image" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/change" android:textColor="@android:color/background_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>