<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".win" android:background="@android:color/black">

    <TextView
            android:text="You Win!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" android:layout_marginTop="52dp"
            app:layout_constraintHorizontal_bias="0.0" android:gravity="center"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp" tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" android:background="@android:color/background_light"/>
    <TextView
            android:text="ここ\naa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/comments" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:textColor="@android:color/black"
            android:background="@drawable/hukidashi" android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp" android:gravity="center"/>
    <TextView
            android:text="おわり"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:id="@+id/sur"
            android:textColor="@android:color/background_light" android:background="@drawable/frame_layout"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/battle_again"/>
    <TextView
            android:text="戦い続ける"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/battle_again"
            android:textColor="@android:color/background_light" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:background="@drawable/frame_layout"/>
    <TextView
            android:text="Score:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/score" android:textColor="@android:color/background_light"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/battle_again"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/comments"/>
</androidx.constraintlayout.widget.ConstraintLayout>